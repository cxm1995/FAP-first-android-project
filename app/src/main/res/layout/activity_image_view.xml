<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewActivity"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#fff000"
        android:src="@drawable/saiyaren"/>
    <ImageView
        android:id="@+id/iv_2"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#fff000"
        android:scaleType="center"
        android:src="@drawable/saiyaren"
        android:layout_below="@id/iv_1"/>
    <ImageView
        android:id="@+id/iv_3"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#fff000"
        android:scaleType="fitXY"
        android:src="@drawable/saiyaren"
        android:layout_below="@id/iv_2"/>
    <ImageView
        android:id="@+id/iv_4"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#fff000"
        android:scaleType="fitCenter"
        android:src="@drawable/saiyaren"
        android:layout_below="@id/iv_3"/>
    <ImageView
        android:id="@+id/iv_5"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#fff000"
        android:scaleType="centerCrop"
        android:src="@drawable/saiyaren"
        android:layout_below="@id/iv_4"/>
    <ImageView
        android:id="@+id/iv_6"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#fff000"
        android:scaleType="centerCrop"
        android:layout_below="@id/iv_5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="默认"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/iv_1"
        android:layout_alignTop="@id/iv_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="center"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/iv_2"
        android:layout_alignTop="@id/iv_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="fitXY"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/iv_3"
        android:layout_alignTop="@id/iv_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="fitcenter"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/iv_4"
        android:layout_alignTop="@id/iv_4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="centerCrop"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/iv_5"
        android:layout_alignTop="@id/iv_5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="加载网络图片"
        android:textColor="#ff0000"
        android:layout_toRightOf="@id/iv_6"
        android:layout_alignTop="@id/iv_6"/>
</RelativeLayout>