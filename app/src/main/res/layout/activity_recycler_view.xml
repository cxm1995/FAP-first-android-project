<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".recyclerview.RecyclerViewActivity">

    <Button
        android:id="@+id/btn_recycler_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="列表视图" />

    <Button
        android:id="@+id/btn_recycler_hor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水平滚动视图" />

    <Button
        android:id="@+id/btn_recycler_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="网格视图" />

    <Button
        android:id="@+id/btn_recycler_stagger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="瀑布视图" />

    <Button
        android:id="@+id/btn_recycler_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XRecyclerView视图" />
</LinearLayout>