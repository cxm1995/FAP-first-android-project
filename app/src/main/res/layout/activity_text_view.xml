<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TextViewActivity">

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_name_1"
        android:textColor="#ff0000"
        android:textSize="16sp" />

    <TextView

        android:id="@+id/tv_2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="安卓第一步，雀氏纸尿布"
        android:textColor="#ff0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/orange"
        android:drawableLeft="@drawable/icon_arrow"
        android:drawablePadding="10dp"
        android:text="筛选"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="安卓第一步，雀氏纸尿布-中划线"
        android:textColor="#ff0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="安卓第一步，雀氏纸尿布-下划线"
        android:textColor="#ff0000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="html-下划线"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="安卓第一步，雀氏纸尿布安卓第一步，雀氏纸尿布安卓第一步，雀氏纸尿布安卓第一步，雀氏纸尿布安卓第一步，雀氏纸尿布安卓第一步，雀氏纸尿布"
        android:textColor="#000000"
        android:textSize="24sp">

        <requestFocus />
    </TextView>

</LinearLayout>